<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"

    android:background="#ECF6A8"
    android:orientation="vertical">

    <!--Logo-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="158dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/application"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="95dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"
        android:text="FIND ME"
        android:textColor="#070709"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:typeface="monospace"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="440dp" />
    <!--signin-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="20sp">


        <EditText
            android:id="@+id/emailsingin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:ems="10"
            android:hint="User email"
            android:textColorHint="#E36A6A69"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/passwordsingin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginVertical="5dp"
            android:hint="Password"
            android:textColorHint="#E36A6A69"
            android:textColor="#000000"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/signinbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="#84B36E"
            android:textAllCaps="false"
            android:textColor="#3B602A"
            android:text="Sign in"
            android:textSize="25dp"
            style="@style/TextAppearance.AppCompat.Caption"
            />

    </LinearLayout>
    <!--sign up-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Don't have a account? "
            android:textColor="#570F0F"
            />

        <TextView
            android:id="@+id/signupbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#234C10"
            android:textSize="15dp"
            android:text="Sign Up"
            />

    </LinearLayout>
    <!--forger password-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="20sp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/forgetPasswordbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textColor="#A60000"
            />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="#072E01"
        android:outlineSpotShadowColor="#4C4B11"
        android:visibility="gone"/>



</LinearLayout>